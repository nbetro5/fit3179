{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Car Sales by State",
    "width": 800,
    "height": 600,
    "projection": {"type": "azimuthalEqualArea"},
    "data": {"url": "https://raw.githubusercontent.com/nbetro5/fit3179/main/australian-states.min.geojson", "format": {"type": "json"}},

    "transform": [
    {
        "lookup": "properties.STATE_NAME",
        "from": {
        "data": {
        "url": "https://raw.githubusercontent.com/nbetro5/fit3179/main/salesbystate.csv"
        },
        "key": "State",
        "fields": ["Sales"]
        }
    }
],
    "mark": {"type": "geoshape"},
    "encoding": {
    "color": {
    "field": "Sales",
    "type": "quantitative",
    "scale": {"type": "linear"}
    },
    "tooltip": [
    {"field": "properties.STATE_NAME", "type": "nominal", "title":
    "State"},
    {"field": "Sales", "type": "quantitative"}
    ]
    }
}